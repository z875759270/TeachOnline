<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhanc.teachonline.dao.TopicSecondCommentDao">

    <resultMap type="com.zhanc.teachonline.entity.TopicSecondComment" id="TopicSecondCommentMap">
        <result property="commentId" column="comment_id" jdbcType="INTEGER"/>
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="commentContent" column="comment_content" jdbcType="VARCHAR"/>
        <result property="commentTime" column="comment_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TopicSecondCommentMap">
        select comment_id,
               user_name,
               comment_content,
               comment_time
        from topic_second_comment
        where comment_id = #{commentId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TopicSecondCommentMap">
        select comment_id,
               user_name,
               comment_content,
               comment_time
        from topic_second_comment limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--指定对象查询数据-->
    <select id="queryAllByTopicSecondComment" resultMap="TopicSecondCommentMap">
        select
        comment_id, user_name, comment_content, comment_time
        from topic_second_comment
        <where>
            <if test="commentId != null">
                and comment_id = #{commentId}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="commentContent != null and commentContent != ''">
                and comment_content = #{commentContent}
            </if>
            <if test="commentTime != null">
                and comment_time = #{commentTime}
            </if>
        </where>
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from topic_second_comment
        <where>
            <if test="commentId != null">
                and comment_id = #{commentId}
            </if>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="commentContent != null and commentContent != ''">
                and comment_content = #{commentContent}
            </if>
            <if test="commentTime != null">
                and comment_time = #{commentTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="commentId" useGeneratedKeys="true">
        insert into topic_second_comment(comment_content, comment_time)
        values (#{commentContent}, #{commentTime})
    </insert>

    <insert id="insertBatch" keyProperty="commentId" useGeneratedKeys="true">
        insert into topic_second_comment(comment_content, comment_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.commentContent}, #{entity.commentTime})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="commentId" useGeneratedKeys="true">
        insert into topic_second_comment(comment_content, comment_time)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.commentContent}, #{entity.commentTime})
        </foreach>
        on duplicate key update
        comment_content = values(comment_content),
        comment_time = values(comment_time)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update topic_second_comment
        <set>
            <if test="commentContent != null and commentContent != ''">
                comment_content = #{commentContent},
            </if>
            <if test="commentTime != null">
                comment_time = #{commentTime},
            </if>
        </set>
        where comment_id = #{commentId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from topic_second_comment
        where comment_id = #{commentId}
    </delete>

</mapper>


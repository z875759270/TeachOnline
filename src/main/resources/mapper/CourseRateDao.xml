<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhanc.teachonline.dao.CourseRateDao">

    <resultMap type="com.zhanc.teachonline.entity.CourseRate" id="CourseRateMap">
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="courseId" column="course_id" jdbcType="INTEGER"/>
        <result property="score" column="score" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CourseRateMap">
        select user_name,
               course_id,
               score
        from course_rate
        where user_name = #{userName}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CourseRateMap">
        select user_name,
               course_id,
               score
        from course_rate limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--指定对象查询数据-->
    <select id="queryAllByCourseRate" resultMap="CourseRateMap">
        select
        user_name, course_id, score
        from course_rate
        <where>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="courseId != null">
                and course_id = #{courseId}
            </if>
            <if test="score != null">
                and score = #{score}
            </if>
        </where>
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from course_rate
        <where>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="courseId != null">
                and course_id = #{courseId}
            </if>
            <if test="score != null">
                and score = #{score}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userName" useGeneratedKeys="true">
        insert into course_rate(score)
        values (#{score})
    </insert>

    <insert id="insertBatch" keyProperty="userName" useGeneratedKeys="true">
        insert into course_rate(score)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.score})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="userName" useGeneratedKeys="true">
        insert into course_rate(score)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.score})
        </foreach>
        on duplicate key update
        score = values(score)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update course_rate
        <set>
            <if test="score != null">
                score = #{score},
            </if>
        </set>
        where user_name = #{userName}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from course_rate
        where user_name = #{userName}
    </delete>

</mapper>


<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhanc.teachonline.dao.CommentLikesDao">

    <resultMap type="com.zhanc.teachonline.entity.CommentLikes" id="CommentLikesMap">
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="commentId" column="comment_id" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="CommentLikesMap">
        select user_name,
               comment_id
        from comment_likes
        where user_name = #{userName}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="CommentLikesMap">
        select user_name,
               comment_id
        from comment_likes limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--指定对象查询数据-->
    <select id="queryAllByCommentLikes" resultMap="CommentLikesMap">
        select
        user_name, comment_id
        from comment_likes
        <where>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="commentId != null">
                and comment_id = #{commentId}
            </if>
        </where>
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from comment_likes
        <where>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="commentId != null">
                and comment_id = #{commentId}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userName" useGeneratedKeys="true">
        insert into comment_likes()
        values ()
    </insert>

    <insert id="insertBatch" keyProperty="userName" useGeneratedKeys="true">
        insert into comment_likes()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="userName" useGeneratedKeys="true">
        insert into comment_likes()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
        on duplicate key update

    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update comment_likes
        <set>
        </set>
        where user_name = #{userName}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from comment_likes
        where user_name = #{userName}
    </delete>

</mapper>


<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhanc.teachonline.dao.UserDao">

    <resultMap type="com.zhanc.teachonline.entity.User" id="UserMap">
        <result property="userName" column="user_name" jdbcType="VARCHAR"/>
        <result property="userPwd" column="user_pwd" jdbcType="VARCHAR"/>
        <result property="userRole" column="user_role" jdbcType="VARCHAR"/>
        <result property="userStatus" column="user_status" jdbcType="INTEGER"/>
        <result property="userEmail" column="user_email" jdbcType="VARCHAR"/>
        <result property="userPhone" column="user_phone" jdbcType="VARCHAR"/>
        <result property="userQq" column="user_qq" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select
          user_name, user_pwd, user_role, user_status, user_email, user_phone, user_qq
        from user
        where user_name = #{userName}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
          user_name, user_pwd, user_role, user_status, user_email, user_phone, user_qq
        from user
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from user
        <where>
            <if test="userName != null and userName != ''">
                and user_name = #{userName}
            </if>
            <if test="userPwd != null and userPwd != ''">
                and user_pwd = #{userPwd}
            </if>
            <if test="userRole != null and userRole != ''">
                and user_role = #{userRole}
            </if>
            <if test="userStatus != null">
                and user_status = #{userStatus}
            </if>
            <if test="userEmail != null and userEmail != ''">
                and user_email = #{userEmail}
            </if>
            <if test="userPhone != null and userPhone != ''">
                and user_phone = #{userPhone}
            </if>
            <if test="userQq != null">
                and user_qq = #{userQq}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="userName" useGeneratedKeys="true">
        insert into user(user_name, user_pwd, user_role, user_status, user_email, user_phone, user_qq)
        values (#{userName},#{userPwd}, #{userRole}, #{userStatus}, #{userEmail}, #{userPhone}, #{userQq})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update user
        <set>
            <if test="userPwd != null and userPwd != ''">
                user_pwd = #{userPwd},
            </if>
            <if test="userRole != null and userRole != ''">
                user_role = #{userRole},
            </if>
            <if test="userStatus != null">
                user_status = #{userStatus},
            </if>
            <if test="userEmail != null and userEmail != ''">
                user_email = #{userEmail},
            </if>
            <if test="userPhone != null and userPhone != ''">
                user_phone = #{userPhone},
            </if>
            <if test="userQq != null">
                user_qq = #{userQq},
            </if>
        </set>
        where user_name = #{userName}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from user where user_name = #{userName}
    </delete>

</mapper>

